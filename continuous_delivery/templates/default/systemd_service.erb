[Unit]
Description=<%= @description %>
Requires=<%= @requires %>.service
After=<%= @after %>.service

[Service]
TimeoutStartSec=0
ExecStart=/usr/bin/docker start -a <%= @container %>
ExecReload=/usr/bin/docker restart <%= @container %>
ExecStop=/usr/bin/docker stop <%= @container %>
Restart=on-failure

[Install]
WantedBy=multi-user.target